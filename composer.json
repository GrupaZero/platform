{
    "name": "gzero/platform",
    "description": "GZERO CMS Platform.",
    "keywords": [
        "framework",
        "laravel",
        "cms",
        "docker",
        "ansible"
    ],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Adrian Skierniewski",
            "email": "adrian.skierniewski@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "laravel/framework": "5.3.*",
        "gzero/cms": "dev-master",
        "gzero/api": "dev-master",
        "gzero/admin": "dev-master",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "2.2.*",
        "barryvdh/laravel-debugbar": "2.3.*",
        "codeception/codeception": "2.2.*",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
        "satooshi/php-coveralls": "dev-master",
        "flow/jsonpath": "0.3.*",
        "gzero/testing": "2.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate",
            "php artisan passport:keys",
            "php artisan vendor:publish --tag=public --force --provider=\"Gzero\\Admin\\ServiceProvider\""
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan vendor:publish --tag=public --force --provider=\"Gzero\\Admin\\ServiceProvider\"",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan vendor:publish --tag=public --force --provider=\"Gzero\\Admin\\ServiceProvider\"",
            "php artisan optimize"
        ],
        "test": [
            "sudo docker exec $(echo ${PWD##*/} | sed -e 's/_//g')_dev_web_1 php /var/www/vendor/bin/codecept run -c /var/www --env platform"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
